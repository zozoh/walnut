#---------------------------------------------------------
#
#                    会话与权限接口
#
#---------------------------------------------------------
# API(auth): 微信重定向跳板
@API'cross/http302' .regapi/api/weixin/oauth2_gh
%TMPL:
weixin ${domain} oauth2 \
  "http://${hostAndPort}/www/${domain}/wxpage/login" \
  -scope ${http-qs-scope?snsapi_userinfo}
%END%
#--------------------------------------------------------
# API(auth): 取得当前站点信息
@API'cross/json' .regapi/api/auth/site
%TMPL:
obj ~/www/${domain} -cqn
%END%
#--------------------------------------------------------
# API(auth): 取得当前会话信息
@API'cross/json' .regapi/api/auth/checkme
%COPY:
www checkme ${http-qs-site?unkonw} ${http-qs-ticket?-nil-} -ajax -cqn
%END%
#--------------------------------------------------------
# API(auth): 修改当前会话账户元数据
@API'cross/json' .regapi/api/auth/setme
%COPY:
cat id:${id} \
  | www checkme ${http-qs-site?unkonw} ${http-qs-ticket?-nil-} -u -ajax -cqn
%END%
#--------------------------------------------------------
# API(auth): 获取指定账户信息
@API'cross/json' .regapi/api/auth/getaccount
%COPY:
www account ${http-qs-site?unkonw} ${http-qs-uid?-nil-} -ajax -cqn
%END%
#--------------------------------------------------------
# API(auth): 获取账户列表（带翻页）
@API'cross/json' .regapi/api/auth/accounts
%COPY:
www account ${http-qs-site?unkonw} \
  '${http-qs-q?}' \
  -list \
  -limit ${http-qs-limit?50} \
  -skip  ${http-qs-skip?0} \
  -sort  '${http-qs-sort?}' \
  -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 微信自动登录
@API'cross/json' .regapi/api/auth/login_by_wxcode
%COPY:
httpparam -in id:${id} \
  | run www auth $${site} $${code?} -wxcode $${ct?mp} -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 账号密码登录
@API'cross/json' .regapi/api/auth/login_by_passwd
%COPY:
httpparam -in id:${id} \
  | run www auth $${site} $${name?} -p $${passwd?} -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 短信密码登录
@API'cross/json' .regapi/api/auth/login_by_phone
%COPY:
httpparam -in id:${id} \
  | run www auth $${site} $${name?} -scene $${scene?auth} -v $${vcode?} \
    -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 邮件密码登录
@API'cross/json' .regapi/api/auth/login_by_email
%COPY:
httpparam -in id:${id} \
  | run www auth $${site} $${name?} -scene $${scene?auth} -v $${vcode?} \
    -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 绑定手机/邮箱
@API'cross/json' .regapi/api/auth/bind_account
%COPY:
httpparam -in id:${id} \
  | run www auth $${site} $${name?} -scene $${scene?auth} -v $${vcode?} \
    -ticket $${ticket?-nil-} \
    -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 获取短信验证码
@API'cross/json' .regapi/api/auth/get_sms_vcode
%COPY:
www captcha ${http-qs-site} ${http-qs-scene?auth} ${http-qs-account?} \
  -cap ${http-qs-captcha} \
  -as sms -du 5 \
  -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 获取邮箱验证码
@API'cross/json' .regapi/api/auth/get_email_vcode
%COPY:
www captcha ${http-qs-site} ${http-qs-scene?auth} ${http-qs-account?} \
  -cap ${http-qs-captcha} \
  -as email -du 20 \
  -ajax -cqn
%END%
#---------------------------------------------------------
# API(auth): 获取图形验证码
@API'cross'{mime:"image/png"} .regapi/api/auth/captcha
%COPY:
www captcha ${http-qs-site} ${http-qs-scene?robot} ${http-qs-account?} \
  -size ${http-qs-size?100x50} \
  -as png
%END%
#---------------------------------------------------------
# API(auth): 修改密码
@API'cross/json' .regapi/api/auth/resetpasswd
%COPY:
httpparam -in id:${id} | www passwd ${http-qs-site} -ticket ${http-qs-ticket} -ajax -check
%END%
#---------------------------------------------------------
# API(auth): 注销会话
@API'cross/json' .regapi/api/auth/logout
%COPY:
www logout ${http-qs-site?unkonw} ${http-qs-ticket?-nil-} -ajax -cqn
%END%